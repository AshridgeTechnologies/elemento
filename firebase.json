{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/run/**",
        "destination": "/run/index.html"
      },
      {
        "source": "/studio/**",
        "destination": "/studio/index.html"
      },
      {
        "source": "/install/**",
        "run": {
          "serviceId": "elemento-app-server",
          "region": "europe-west2"
        }
      }
    ],
    "headers": [
      {
        "source": "lib/*.@(js|cjs)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 5002
    }
  },
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "extensions": {
    "elemento-app-server": "../elemento-app-server"
  }
}
