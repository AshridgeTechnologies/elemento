        {
          "id": "page_1",
          "name": "Word Details Page",
          "kind": "Page",
          "properties": {},
          "elements": [
            {
              "id": "layout_1",
              "name": "Page Layout ",
              "kind": "Layout",
              "properties": {
                "horizontal": true
              },
              "elements": [
                {
                  "id": "layout_10",
                  "name": "List Layout",
                  "kind": "Layout",
                  "properties": {},
                  "elements": [
                    {
                      "id": "textinput_7",
                      "name": "WordFilter",
                      "kind": "TextInput",
                      "properties": {
                        "width": "15em",
                        "label": "Filter words"
                      },
                      "elements": []
                    },
                    {
                      "id": "list_5",
                      "name": "WordList",
                      "kind": "List",
                      "properties": {
                        "items": {
                          "expr": "Sort(FilteredWords(), $item.Word.toString().toLowerCase())"
                        }
                      },
                      "elements": [
                        {
                          "id": "text_22",
                          "name": "ListWord",
                          "kind": "Text",
                          "properties": {
                            "content": {
                              "expr": "$item.Word"
                            }
                          }
                        }
                      ]
                    },
                    {
                      "id": "function_3",
                      "name": "FilteredWords",
                      "kind": "Function",
                      "properties": {
                        "calculation": {
                          "expr": "Select(Words.Query({}), $item.Word.toString().toLowerCase().includes(WordFilter.value.toLowerCase()))"
                        }
                      },
                      "elements": []
                    }
                  ]
                },
                {
                  "id": "layout_2",
                  "name": "Widget Form",
                  "kind": "Layout",
                  "properties": {
                    "horizontal": false
                  },
                  "elements": [
                    {
                      "id": "data_1",
                      "name": "WordId",
                      "kind": "Data",
                      "properties": {
                        "display": false,
                        "initialValue": {
                          "expr": "WordList.selectedItem && WordList.selectedItem.id"
                        }
                      }
                    },
                    {
                      "id": "data_3",
                      "name": "TheWord",
                      "kind": "Data",
                      "properties": {
                        "initialValue": {
                          "expr": "WordId.value && Get(Words, WordId.value)"
                        },
                        "display": false
                      }
                    },
                    {
                      "id": "layout_4",
                      "name": "Layout 4",
                      "kind": "Layout",
                      "properties": {
                        "horizontal": true
                      },
                      "elements": [
                        {
                          "id": "text_3",
                          "name": "Page name",
                          "kind": "Text",
                          "properties": {
                            "content": "Word details",
                            "fontSize": 21
                          }
                        },
                        {
                          "id": "button_12",
                          "name": "New Word Button",
                          "kind": "Button",
                          "properties": {
                            "content": "New Word",
                            "appearance": "outline",
                            "action": {
                              "expr": "Reset(Word, Translation, WordList)"
                            }
                          }
                        }
                      ]
                    },
                    {
                      "id": "textinput_1",
                      "name": "Word",
                      "kind": "TextInput",
                      "properties": {
                        "width": "100%",
                        "initialValue": {
                          "expr": "TheWord.Word"
                        }
                      }
                    },
                    {
                      "id": "textinput_2",
                      "name": "Translation",
                      "kind": "TextInput",
                      "properties": {
                        "multiline": true,
                        "width": "100%",
                        "initialValue": {
                          "expr": "TheWord.Translation"
                        }
                      }
                    },
                    {
                      "id": "textinput_3",
                      "name": "Date Learned",
                      "kind": "TextInput",
                      "properties": {
                        "initialValue": {
                          "expr": "TheWord.DateLearned && DateFormat(TheWord.DateLearned, \"dd MMM yyyy\")"
                        },
                        "readOnly": true
                      }
                    },
                    {
                      "id": "textinput_4",
                      "name": "Last Revised",
                      "kind": "TextInput",
                      "properties": {
                        "initialValue": {
                          "expr": "TheWord.LastRevised && DateFormat(TheWord.LastRevised, \"dd MMM yyyy\")"
                        },
                        "readOnly": true
                      }
                    },
                    {
                      "id": "textinput_5",
                      "name": "Last Revised Ok",
                      "kind": "TextInput",
                      "properties": {
                        "initialValue": {
                          "expr": "TheWord.LastRevisedOk"
                        },
                        "readOnly": true
                      }
                    },
                    {
                      "id": "layout_3",
                      "name": "Page Buttons",
                      "kind": "Layout",
                      "properties": {
                        "horizontal": true,
                        "wrap": true,
                        "width": "100%"
                      },
                      "elements": [
                        {
                          "id": "button_8",
                          "name": "Add Word Button",
                          "kind": "Button",
                          "properties": {
                            "content": "Add Word",
                            "appearance": "outline",
                            "display": {
                              "expr": "!WordId.value"
                            },
                            "action": {
                              "expr": "let newWord = Record('id', 'w' + Timestamp(), 'Word', Word, 'Translation', Translation);\nAdd(Words, newWord);\nReset(Word, Translation);\nSet(WordList, newWord)"
                            }
                          }
                        },
                        {
                          "id": "button_9",
                          "name": "Update Widget Button",
                          "kind": "Button",
                          "properties": {
                            "content": "Save Changes",
                            "appearance": "outline",
                            "display": {
                              "expr": "!!WordId.value"
                            },
                            "action": {
                              "expr": "Update(Words, WordId, Record('Word', Word, 'Translation', Translation))\nReset(Word, Translation)"
                            }
                          }
                        },
                        {
                          "id": "button_10",
                          "name": "Cancel Button",
                          "kind": "Button",
                          "properties": {
                            "content": "Abandon Changes",
                            "appearance": "outline",
                            "action": {
                              "expr": "Reset(Word, Translation)"
                            }
                          }
                        },
                        {
                          "id": "button_11",
                          "name": "Delete Button",
                          "kind": "Button",
                          "properties": {
                            "content": "Delete",
                            "appearance": "outline",
                            "action": {
                              "expr": "Remove(Words, WordId)\nReset(WordList)\nReset(Word, Translation)"
                            },
                            "display": {
                              "expr": "!!WordId.value"
                            }
                          }
                        }
                      ]
                    },
                    {
                      "id": "text_4",
                      "name": "IdDisplay",
                      "kind": "Text",
                      "properties": {
                        "content": {
                          "expr": "WordId"
                        },
                        "display": false,
                        "color": "gray",
                        "width": 160,
                        "fontSize": 12
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "page_2",
          "name": "Revision Page",
          "kind": "Page",
          "properties": {},
          "elements": [
            {
              "id": "data_6",
              "name": "Revision Periods",
              "kind": "Data",
              "properties": {
                "initialValue": {
                  "expr": "List(1, 7, 30, 180)"
                }
              }
            },
            {
              "id": "text_5",
              "name": "Title",
              "kind": "Text",
              "properties": {
                "content": "Revision",
                "fontSize": 20
              }
            },
            {
              "id": "function_1",
              "name": "UpToDate",
              "kind": "Function",
              "properties": {
                "input1": "word",
                "calculation": {
                  "expr": "let sinceLearned = If(word.DateLearned, DaysBetween(word.DateLearned, Today()), 0)\nlet latestRevisionTime = Last(RevisionPeriods, $item <= sinceLearned)\nlet latestRevisionDate = DateAdd(word.DateLearned, latestRevisionTime, 'days')\nlet latestRevisionDone = word.LastRevised && DaysBetween(latestRevisionDate, word.LastRevised) >= 0\nOr(Not(word.DateLearned), Not(latestRevisionTime), And(latestRevisionDone, word.LastRevisedOk))"
                }
              }
            },
            {
              "id": "function_2",
              "name": "ShouldShow",
              "kind": "Function",
              "properties": {
                "input1": "word",
                "calculation": {
                  "expr": "let revisedToday = DaysBetween(word.LastRevised, Today()) == 0\nOr(Not(UpToDate(word)), revisedToday)"
                }
              }
            },
            {
              "id": "data_4",
              "name": "WordsToRevise",
              "kind": "Data",
              "properties": {
                "initialValue": {
                  "expr": "Select(Words.Query({}), ShouldShow($item))"
                }
              }
            },
            {
              "id": "list_2",
              "name": "WordList",
              "kind": "List",
              "properties": {
                "items": {
                  "expr": "Sort(WordsToRevise, $item.LastRevised)"
                },
                "width": "100%",
                "selectable": false
              },
              "elements": [
                {
                  "id": "layout_5",
                  "name": "Item Layout",
                  "kind": "Layout",
                  "properties": {
                    "horizontal": true,
                    "width": "100%",
                    "backgroundColor": {
                      "expr": "If(RevisedToday, 'lightgray', '')"
                    }
                  },
                  "elements": [
                    {
                      "id": "layout_9",
                      "name": "Word Layout",
                      "kind": "Layout",
                      "properties": {
                        "horizontal": true,
                        "width": "80%",
                        "wrap": true
                      },
                      "elements": [
                        {
                          "id": "text_19",
                          "name": "Word",
                          "kind": "Text",
                          "properties": {
                            "content": {
                              "expr": "$item.Word"
                            },
                            "width": "15em"
                          }
                        },
                        {
                          "id": "text_20",
                          "name": "Translation",
                          "kind": "Text",
                          "properties": {
                            "content": {
                              "expr": "$item.Translation"
                            },
                            "width": "15em",
                            "color": {
                              "expr": "If(DaysBetween(ShowTranslation, Today()) == 0, 'inherit', 'transparent')"
                            }
                          }
                        }
                      ]
                    },
                    {
                      "id": "data_9",
                      "name": "Show Translation",
                      "kind": "Data",
                      "properties": {
                        "initialValue": {
                          "expr": "null"
                        },
                        "display": false
                      },
                      "elements": []
                    },
                    {
                      "id": "data_10",
                      "name": "RevisedToday",
                      "kind": "Data",
                      "properties": {
                        "initialValue": {
                          "expr": "DaysBetween($item.LastRevised, Today()) == 0"
                        }
                      },
                      "elements": []
                    },
                    {
                      "id": "icon_7",
                      "name": "Visible Icon",
                      "kind": "Icon",
                      "properties": {
                        "iconName": "visibility",
                        "fontSize": 24,
                        "color": "blue",
                        "action": {
                          "expr": "Set(ShowTranslation, null)"
                        },
                        "label": "Click to hide",
                        "display": {
                          "expr": "DaysBetween(ShowTranslation, Today()) == 0"
                        }
                      },
                      "elements": []
                    },
                    {
                      "id": "icon_9",
                      "name": "Not Visible Icon",
                      "kind": "Icon",
                      "properties": {
                        "iconName": "disabled_visible",
                        "fontSize": 24,
                        "color": "gray",
                        "action": {
                          "expr": "Set(ShowTranslation, Today())"
                        },
                        "label": "Click to show",
                        "display": {
                          "expr": "DaysBetween(ShowTranslation, Today()) != 0"
                        }
                      },
                      "elements": []
                    },
                    {
                      "id": "icon_5",
                      "name": "Revised Ok Icon",
                      "kind": "Icon",
                      "properties": {
                        "iconName": "check",
                        "display": true,
                        "color": {
                          "expr": "If(And(RevisedToday, $item.LastRevisedOk), 'green', 'gray')"
                        },
                        "fontSize": 24,
                        "action": {
                          "expr": "Words.Update($item.id, Record('LastRevised', Today(), 'LastRevisedOk', true))"
                        }
                      },
                      "elements": []
                    },
                    {
                      "id": "icon_6",
                      "name": "Not Revised Ok Icon",
                      "kind": "Icon",
                      "properties": {
                        "iconName": "close",
                        "display": true,
                        "color": {
                          "expr": "If(And(RevisedToday, Not($item.LastRevisedOk)), 'red', 'gray')"
                        },
                        "fontSize": 24,
                        "action": {
                          "expr": "Words.Update($item.id, Record('LastRevised', Today(), 'LastRevisedOk', false))"
                        }
                      },
                      "elements": []
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "page_3",
          "name": "Learn Page",
          "kind": "Page",
          "properties": {},
          "elements": [
            {
              "id": "layout_8",
              "name": "Title Layout",
              "kind": "Layout",
              "properties": {
                "horizontal": true,
                "width": "100%",
                "wrap": true
              },
              "elements": [
                {
                  "id": "text_18",
                  "name": "Title",
                  "kind": "Text",
                  "properties": {
                    "content": "Words to Learn",
                    "fontSize": 20,
                    "width": "16em"
                  }
                },
                {
                  "id": "text_17",
                  "name": "Learning count",
                  "kind": "Text",
                  "properties": {
                    "content": {
                      "expr": "\"Words being learned: \"  + Select(WordsToLearn, $item.Learning).length"
                    },
                    "backgroundColor": "#eeeeee"
                  },
                  "elements": []
                }
              ]
            },
            {
              "id": "data_5",
              "name": "WordsToLearn",
              "kind": "Data",
              "properties": {
                "initialValue": {
                  "expr": "Select(Words.Query({}), Or(Not($item.DateLearned), DaysBetween($item.DateLearned, Today()) == 0))"
                },
                "display": false
              }
            },
            {
              "id": "list_4",
              "name": "WordList",
              "kind": "List",
              "properties": {
                "items": {
                  "expr": "WordsToLearn"
                },
                "width": "100%",
                "selectable": false
              },
              "elements": [
                {
                  "id": "layout_6",
                  "name": "Item Layout",
                  "kind": "Layout",
                  "properties": {
                    "horizontal": true,
                    "width": "100%",
                    "backgroundColor": {
                      "expr": "If($item.Learning, 'PowderBlue', '')"
                    }
                  },
                  "elements": [
                    {
                      "id": "layout_7",
                      "name": "Word Layout",
                      "kind": "Layout",
                      "properties": {
                        "horizontal": true,
                        "width": "80%",
                        "wrap": true
                      },
                      "elements": [
                        {
                          "id": "text_15",
                          "name": "Word",
                          "kind": "Text",
                          "properties": {
                            "content": {
                              "expr": "$item.Word"
                            },
                            "width": "15em"
                          }
                        },
                        {
                          "id": "text_16",
                          "name": "Translation",
                          "kind": "Text",
                          "properties": {
                            "content": {
                              "expr": "$item.Translation"
                            },
                            "width": "15em",
                            "color": {
                              "expr": "If(ShowTranslation, 'inherit', 'transparent')"
                            }
                          }
                        }
                      ]
                    },
                    {
                      "id": "icon_2",
                      "name": "Visible Icon",
                      "kind": "Icon",
                      "properties": {
                        "iconName": {
                          "expr": "If(ShowTranslation, 'visibility', 'disabled_visible')"
                        },
                        "fontSize": 24,
                        "color": {
                          "expr": "If(ShowTranslation, 'blue', 'gray')"
                        },
                        "action": {
                          "expr": "Set(ShowTranslation, Not(ShowTranslation))"
                        },
                        "label": {
                          "expr": "If(ShowTranslation, 'Hide', 'Show')"
                        }
                      },
                      "elements": []
                    },
                    {
                      "id": "data_8",
                      "name": "Learned",
                      "kind": "Data",
                      "properties": {
                        "initialValue": {
                          "expr": "!!$item.DateLearned"
                        }
                      },
                      "elements": []
                    },
                    {
                      "id": "icon_8",
                      "name": "Stop Icon",
                      "kind": "Icon",
                      "properties": {
                        "iconName": "stop",
                        "color": {
                          "expr": "If(Or($item.Learning, $item.DateLearned), \"gray\", \"blue\")"
                        },
                        "action": {
                          "expr": "Words.Update($item.id, Record('Learning', false, 'DateLearned', null))\nSet(ShowTranslation, true)"
                        },
                        "label": "Stop learning"
                      },
                      "elements": []
                    },
                    {
                      "id": "icon_3",
                      "name": "Learning Icon",
                      "kind": "Icon",
                      "properties": {
                        "iconName": "play_arrow",
                        "color": {
                          "expr": "If($item.Learning, \"orange\", \"gray\")"
                        },
                        "fontSize": 24,
                        "action": {
                          "expr": "Words.Update($item.id, Record('Learning', true, 'DateLearned', null))\nSet(ShowTranslation, false)"
                        },
                        "label": "Start learning"
                      },
                      "elements": []
                    },
                    {
                      "id": "icon_4",
                      "name": "Learned Icon",
                      "kind": "Icon",
                      "properties": {
                        "iconName": "check",
                        "color": {
                          "expr": "If($item.DateLearned, \"green\", \"gray\")"
                        },
                        "fontSize": 24,
                        "action": {
                          "expr": "Words.Update($item.id, Record('Learning', false, 'DateLearned', Today()))\nSet(ShowTranslation, true)"
                        },
                        "label": "Word learned"
                      },
                      "elements": []
                    },
                    {
                      "id": "data_7",
                      "name": "Show Translation",
                      "kind": "Data",
                      "properties": {
                        "initialValue": "true"
                      },
                      "elements": []
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "page_4",
          "name": "Import Page",
          "kind": "Page",
          "properties": {},
          "elements": [
            {
              "id": "text_12",
              "name": "Title",
              "kind": "Text",
              "properties": {
                "content": "Import  words",
                "fontSize": 20
              }
            },
            {
              "id": "text_14",
              "name": "Instructions",
              "kind": "Text",
              "properties": {
                "content": "Data columns are:\nWord, Translation, Date Learned, Last Revised, Last Revised Ok",
                "fontSize": 14
              },
              "elements": []
            },
            {
              "id": "textinput_6",
              "name": "Csv Text",
              "kind": "TextInput",
              "properties": {
                "multiline": true,
                "width": "100%",
                "label": "Type or paste comma-separated value rows here"
              }
            },
            {
              "id": "button_21",
              "name": "Import Button",
              "kind": "Button",
              "properties": {
                "content": "Import",
                "appearance": "outline",
                "action": {
                  "expr": "let columns = List('Word', 'Translation', 'Date Learned', 'Last Revised', 'Last Revised Ok')\nlet newItems =  CsvToRecords(CsvText.value, columns)\nLog(newItems)\nAdd(Words, newItems)\nSet(MessageText, \"Imported \" + newItems.length + \" words\")\nReset(CsvText)"
                }
              }
            },
            {
              "id": "data_11",
              "name": "Message Text",
              "kind": "Data",
              "properties": {},
              "elements": []
            },
            {
              "id": "text_21",
              "name": "Message",
              "kind": "Text",
              "properties": {
                "content": {
                  "expr": "MessageText"
                }
              },
              "elements": []
            }
          ]
        },
        {
          "id": "firestoredatastore_1",
          "name": "Firestore Data Store 1",
          "kind": "FirestoreDataStore",
          "properties": {
            "collections": "Words: user-private"
          },
          "elements": []
        },
        {
          "id": "browserdatastore_1",
          "name": "Browser Data Store 1",
          "kind": "BrowserDataStore",
          "properties": {
            "databaseName": "VocabularyRevision",
            "collectionNames": [
              "Words"
            ]
          },
          "elements": []
        },
        {
          "id": "collection_1",
          "name": "Words",
          "kind": "Collection",
          "properties": {
            "collectionName": "Words",
            "dataStore": {
              "expr": "FirestoreDataStore1"
            },
            "display": false
          }
        }
      ]
    },
    {
      "id": "firebasepublish_1",
      "name": "Firebase Publisher",
      "kind": "FirebasePublish",
      "properties": {
        "firebaseProject": "revision-zoo"
      },
      "elements": []
    }
  ]
}