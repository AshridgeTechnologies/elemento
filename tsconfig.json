{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": [
      "es2020",
      "dom",
      "webworker"
    ],
    "module": "es2020",
    "moduleResolution": "bundler",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "jsx": "react",
    "sourceMap": true,
    "types": ["@cloudflare/workers-types", "@testing-library/jest-dom"]
  },

  "include": [
    "src/**/*","tests/**/*","tests_node/**/*"
  ],
  "exclude": ["node_modules"]

}
