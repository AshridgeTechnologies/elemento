{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "jsx": "react",
    "sourceMap": true
  },

  "include": [
    "src/**/*","tests/**/*"
  ],
  "exclude": ["node_modules"]

}